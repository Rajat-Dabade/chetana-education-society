{
  "name": "chetana-education-society",
  "version": "1.0.0",
  "description": "Chetana Education Society - Empowering communities through quality education",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=apps/api\" \"npm run dev --workspace=apps/web\"",
    "build": "npm run build --workspace=apps/web",
    "build:api": "npm run build --workspace=apps/api",
    "build:all": "npm run build --workspace=apps/api && npm run build --workspace=apps/web",
    "lint": "npm run lint --workspace=apps/api && npm run lint --workspace=apps/web",
    "format": "npm run format --workspace=apps/api && npm run format --workspace=apps/web",
    "seed": "npm run seed --workspace=apps/api",
    "prisma:generate": "npm run prisma:generate --workspace=apps/api",
    "prisma:migrate": "npm run prisma:migrate --workspace=apps/api",
    "build:web": "cd apps/web && npm install && npm run build"
  },
  "dependencies": {
    "@prisma/client": "^5.4.2",
    "@vercel/node": "^3.0.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.2",
    "zod": "^3.22.4",
    "dompurify": "^3.0.5",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@types/bcryptjs": "^2.4.4",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/multer": "^1.4.8",
    "@types/node": "^20.6.3",
    "prisma": "^5.4.2",
    "typescript": "^5.2.2"
  }
}
